{% extends '../base.html.twig' %}

{% block title %}Demande de réinitialisation de mot de passe{% endblock %}
{% block header %} {% endblock %}
{% block content %}
    <main class="flex h-screen md:h-full items-center text-outremer">
        <div class="flex flex-col flex-1 items-center justify-center h-full relative">
            <img src="/image/logo-dive-and-collect.png" alt="Logo dive and collect"
                 class="absolute top-1.5 lg:top-0 lg:left-0 h-40 lg:h-52">
            <h1 class="text-3xl font-bold mb-8 text-center text-outremer mb-6">Demande de réinitialisation de mot de
                passe</h1>
            {% block custom_flash_messages %}
                {% for type, messagesByType in app.flashes %}
                    {% for message in messagesByType %}
                        <div class="max-w-lg mx-auto p-4 mb-4 rounded-lg text-center
                    {% if type == 'success' %}
                        bg-green-200 text-green-800
                    {% elseif type == 'error' %}
                        bg-red-200 text-red-800
                    {% elseif type == 'warning' %}
                        bg-yellow-200 text-yellow-800
                    {% else %}
                        bg-gray-200 text-gray-800
                    {% endif %}">
                            {{ message|raw }}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endblock %}
            <form method="post" action="{{ path('app_reset_password', {'token': token}) }}"
                  class="max-w-sm w-full mb-8">
                {{ form_start(passForm) }}
                {# Disable automatic error display using form_row #}
                {{ form_row(passForm.password.first) }}
                {{ form_row(passForm.password.second) }}
                {{ form_end(passForm) }}
            </form>
        </div>
        <div class="hidden lg:flex flex-1 items-center justify-center h-full bg-outremer p-8">
            <img src="/image/freepik-underwater-landscape-ia.jpg" alt="underwater landscape image"
                 class="max-w-full scale-80">
        </div>
    </main>
{% endblock %}
{% block footer %}
    <footer class="fixed bottom-0 w-full border-t border-white">
        {% include '/layouts/_footer.html.twig' %}
    </footer>
{% endblock %}
