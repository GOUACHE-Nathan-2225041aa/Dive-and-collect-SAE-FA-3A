{% extends 'base.html.twig' %}

{% block title %}Ajouter une photo{% endblock %}

{% block content %}
    <div class="container mt-5">
        <h1 class="mb-4">Ajouter une photo</h1>

        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

        <div class="mb-3">
            {{ form_label(form.imageFile) }}
            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.imageFile) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.espece) }}
            {{ form_widget(form.espece, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.espece) }}
        </div>

        <button type="submit" class="btn btn-primary">Envoyer la photo</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
