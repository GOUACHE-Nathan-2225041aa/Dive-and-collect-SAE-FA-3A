{% extends 'base.html.twig' %}
{% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('styles/espece.css') }}">
{% endblock %}
{% block content %}
        <div class="species-card">
                <h2>Species List</h2>

                <ul class="species-list">
                        {% for espece in especes %}
                                <li class="species-item">
                                        {% if espece.imageFileName %}
                                                <img src="{{ asset('uploads/photos/' ~ espece.imageFileName) }}" alt="Photo de {{ espece.nom }}" style="max-width: 200px;" />
                                        {% else %}
                                                <p><em>Pas de photo</em></p>
                                        {% endif %}
                                        <span class="species-name">{{ espece.nom }}</span>
                                        <form
                                                action="{{ path('admin_supprimer_espece', {'id': espece.id}) }}"
                                                method="post"
                                                style="display:inline"
                                                onsubmit="return confirm('Are you sure you want to delete this species?');"
                                        >
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ espece.id) }}">
                                                <button type="submit" class="btn btn-danger btn-sm">üóëÔ∏è Delete</button>
                                                <a href="{{ path('admin_modifier_espece', { id: espece.id }) }}" class="btn btn-sm btn-warning">‚úèÔ∏è Modifier</a>
                                        </form>
                                </li>
                        {% else %}
                                <li class="species-item species-empty">No species found yet, sailor.</li>
                        {% endfor %}
                </ul>

                <a href="{{ path('admin_creer_espece') }}" class="btn btn-primary add-btn">‚ûï Add species</a>
        </div>

{% endblock %}