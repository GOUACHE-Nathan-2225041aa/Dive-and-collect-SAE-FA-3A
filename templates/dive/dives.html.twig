        </div>
        {% if dives|length > 0 %}
            <div
                class="bg-lagon text-white mx-auto rounded-xl mt-14 pb-4 lg:w-7/12 md:w-4/5 shadow-2xl overflow-auto"
                style="min-height: 30vh; max-height: 80vh;">
                <table class="min-w-full border-collapse mb-4">
                    <thead class="sticky top-0 bg-lagon z-10">
                    <tr class="text-outremer">
                        <th class="pt-8 text-center w-2/7">Titre</th>
                        <th class="pt-8 text-center w-2/7">Date</th>
                        <th class="pt-8 text-center w-2/7">Description</th>
                        <th class="pt-8 text-center w-1/7 md:pr-8 lg:pr-4">Voir</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for dive in dives %}
                        <tr style="height: 100px">
                            <td class="py-4 px-3 text-center w-2/7">{{ dive.title }}</td>
                            <td class="py-4 px-3 text-center w-2/7">{{ dive.createdAt|date('d-m-Y') }}</td>
                            <td class="py-4 px-3 text-center w-2/7">{{ dive.description|slice(0, 40) ~ '...' }}</td>
                            <td class="py-4 px-3 text-center w-1/7">
                                <a href="{{ path('app_dive', {id: dive.id}) }}" class="flex justify-center"><img
                                        src="/image/eye_icon.png" class="w-9 md:mr-8 lg:mr-4"></a>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4">
                                <hr class="w-2/3 m-auto border-fushia">
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="bg-lagon p-4 text-white mt-40 mx-auto rounded-xl mb-4 flex flex-col justify-center"
                 style="width: 50%; min-height: 30vh">
                <p class="text-center text-xl mt-2">Vous n'avez pas encore ajouté de plongée.</p>
                <p class="text-center text-xl mt-2">Rendez-vous sur la page <a href="#"
                                                                               class="text-fushia fw-bold hover:underline">Spots</a>
                    pour partager votre plongée</p>
            </div>
        {% endif %}
    </main>
{% endblock %}

{% block footer %}
    <footer>
        {% include 'layouts/_footer.html.twig' %}
    </footer>
{% endblock %}
