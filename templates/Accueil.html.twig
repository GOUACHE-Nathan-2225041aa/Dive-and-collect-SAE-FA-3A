{% extends "base.html.twig" %}
{% block title %} Dive & Collect - Home {% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/accueil.css') }}" data-page-specific="{{ app.request.pathinfo }}"/>
    {{ block('stylesheets', 'components/ScrollCarousel.html.twig') }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('scripts/components/scrollCarousel.js') }}"></script>
    {{ block('javascripts', 'components/ScrollCarousel.html.twig') }}
{% endblock %}

{% block content %}
    <div class="first-block" style="background-image: url('{{ asset('images/accueil/fond_marin.png') }}')">
        <label>
            TOGETHER,<br>
            LET'S MAKE THE OCEANS<br>
            BLUER FOR TOMORROW
        </label>
        <label>
            With Dive and Collect, your underwater expeditions directly contribute to<br>
            the preservation of marine ecosystems, the protection of biodiversity, and global<br>
            scientific research.
        </label>
        <button onclick="window.location.href='{{ path('ONG_Subscription') }}'">Discover</button>
    </div>

    <div class="second-block">
        <label class="second-block-title">What Dive & Collect Brings You</label>
        <div class="card">
            <img src="{{ asset('images/axolot.svg') }}" alt="">
            <label class="card-title">
                Dive with a Mission:<br>
                Protect the Planet
            </label>
            <label class="card-text">
                Every dive with Dive and Collect<br>
                supports a global network of scientists<br>
                and NGOs dedicated to ocean protection.<br>
                By participating, you help collect<br>
                critical data to safeguard marine life.
            </label>
        </div>
        <div class="card">
            <img src="{{ asset('images/axolot.svg') }}" alt="">
            <label class="card-title">
                Dive with a Mission:<br>
                Protect the Planet
            </label>
            <label class="card-text">
                Every dive with Dive and Collect<br>
                supports a global network of scientists<br>
                and NGOs dedicated to ocean protection.<br>
                By participating, you help collect<br>
                critical data to safeguard marine life.
            </label>
        </div>
        <div class="card">
            <img src="{{ asset('images/axolot.svg') }}" alt="">
            <label class="card-title">
                Dive with a Mission:<br>
                Protect the Planet
            </label>
            <label class="card-text">
                Every dive with Dive and Collect<br>
                supports a global network of scientists<br>
                and NGOs dedicated to ocean protection.<br>
                By participating, you help collect<br>
                critical data to safeguard marine life.
            </label>
        </div>
    </div>

    <div class="third-block">
        <label class="pink-subtitle">
            They Contributed to Species Mapping
        </label>
        <div class="img-container" onclick="window.location.href='{{ path('Species_Map') }}'">
            <img src="{{ asset('images/accueil/carte.png') }}">
            <div class="overlay-text">Species Map</div>
        </div>
    </div>

    <div class="forth-block">
        <label class="pink-subtitle">They Contributed to Species Mapping</label>
        {% set carouselContent = render_block('components/ScrollCarousel.html.twig', 'content', {
            carouselId: 'carousel1',
            images: exempleImages,
            card_click_action: "window.location.href='" ~ path('Gallery') ~ "'"
        }) %}
        {{ carouselContent|raw }}

        <button class="add-button" onclick="window.location.href='{{ path('Gallery') }}'">+ Add my photo</button>
    </div>

    <div class="first-block last-block" style="background-image: url('{{ asset('images/accueil/fond_marin.png') }}')">
        <label>
            DIVE IN,<br>
            PROTECT THE OCEANS,<br>
            SHAPE THE FUTURE
        </label>
        <label>
            Every Dive and Collect expedition helps defend marine life,<br>
            empower ocean science, and inspire global conservation<br>
            efforts for a healthier planet.
        </label>
        <button onclick="window.location.href='{{ path('ONG_Subscription') }}'">Discover</button>
    </div>
{% endblock %}