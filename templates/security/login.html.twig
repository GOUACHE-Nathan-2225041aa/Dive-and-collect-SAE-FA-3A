{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block header %} {% endblock %}
{% block content %}
    <main class="flex h-screen md:h-full items-center text-outremer">
        <div class="flex flex-col flex-1 items-center justify-center h-full relative">
            <a href="{{ path("homepage") }}">
                <img src="image/logo-dive-and-collect.png" alt="Logo dive and collect"
                     class="absolute top-1.5 lg:top-0 left-1.5 lg:left-0 h-40 lg:h-52">
            </a>
            <p class="mb-4 lg:mb-0 mt-6 lg:mt-0 lg:absolute top-6 right-6 text-outremer">
                Pas encore de compte? <a id="Inscrivez-vous" href="{{ path('app_register') }}" class="text-lagon hover:underline">Inscrivez-vous
                    !</a>
            </p>
            {% block custom_flash_messages %}
                {% for type, messagesByType in app.flashes %}
                    {% for message in messagesByType %}
                        <div data-timer="15000" class="flash-message max-w-lg mx-auto p-4 mb-4 rounded-lg text-center
                    {% if type == 'success' %}
                        bg-green-200 text-green-800
                    {% elseif type == 'error' %}
                        bg-red-200 text-red-800
                    {% elseif type == 'warning' %}
                        bg-yellow-200 text-yellow-800
                    {% else %}
                        bg-gray-200 text-gray-800
                    {% endif %}">
                            {{ message|raw }}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endblock %}
            <form method="post" action="{{ path('app_login') }}" class="max-w-sm w-full mb-8">
                <h1 class="text-3xl font-bold mb-8 text-center text-outremer mb-6">Connexion</h1>
                <div class="mb-6">
                    <label for="inputEmail" class="absolute text-black font-bold pl-2 text-outremer">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="block w-full rounded border pt-6 text-placeholder mt-2 pl-2"
                           placeholder="exemple@gmail.com" required>
                </div>
                <div class="mb-6">
                    <label for="inputPassword" class="absolute text-black font-bold pl-2 text-outremer">Mot de
                        passe</label>
                    <input type="password" name="password" id="inputPassword"
                           class="block w-full rounded border pt-6 text-placeholder mt-2 pl-2" placeholder="**********"
                           required>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <div class="flex justify-center">
                    <input id="login-submit" type="submit" class="w-full bg-fushia text-white font-bold p-2 mt-4 rounded cursor-pointer">
                </div>
            </form>
            <p><a href="{{ path('app_forgotten_password') }}" class="hover:underline">Mot de passe oubli√©?</a></p>
        </div>
        <div class="hidden lg:flex flex-1 items-center justify-center h-full bg-outremer p-8">
            <img src="image/freepik-turtle-ia.jpg" alt="turtle image" class="max-w-full scale-80">
        </div>
    </main>
{% endblock %}
{% block footer %}
    <footer class="w-full border-t border-white">
        {% include '/layouts/_footer.html.twig' %}
    </footer>
{% endblock %}
